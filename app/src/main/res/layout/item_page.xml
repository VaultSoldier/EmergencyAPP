<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fireImage_1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/fireTitle_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/matt_howard_fire"
        />

    <TextView
        android:id="@+id/fireTitle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Title text"
        android:textColor="#000000"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/fireAbout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fireTitle_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:text="Text about"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>