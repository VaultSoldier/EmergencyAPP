<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.CallsFragment"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="5sp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12sp"
            app:cardCornerRadius="15sp">

            <TextView
                android:id="@+id/ALL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9F73EA"
                android:gravity="center"
                android:text="Единый номер\n112"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12sp"
            app:cardCornerRadius="15sp">
            <TextView
                android:id="@+id/firefightersTEXTBOX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F85712"
                android:gravity="center"
                android:text="@string/numbers_firefighters"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12sp"
            app:cardCornerRadius="15sp">

            <TextView
                android:id="@+id/policeTEXTBOX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3DA0DE"
                android:gravity="center"
                android:text="@string/numbers_police"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15sp">
            <TextView
                android:id="@+id/medTEXTBOX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ED2C43"
                android:gravity="center"
                android:text="@string/numbers_med"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>